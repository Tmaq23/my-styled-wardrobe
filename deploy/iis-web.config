<?xml version="1.0" encoding="UTF-8"?>
<!--
  IIS/iisnode config to run the Next.js standalone server.
  Requirements on the Windows host:
    - iisnode module installed
    - URL Rewrite + ARR enabled
    - Node.js 20+ installed on the server

  Notes:
    - If you're using Plesk's Node.js feature, you do NOT need this file.
    - This file assumes the entry is .next/standalone/server.js (Next.js standalone output).
    - All requests are rewritten to the Node server entry.
-->
<configuration>
  <system.webServer>
    <handlers>
      <!-- iisnode handles the Node entry point -->
      <add name="iisnode" path=".next/standalone/server.js" verb="*" modules="iisnode" />
    </handlers>

    <rewrite>
      <rules>
        <!-- Route everything to the Node server entry -->
        <rule name="Rewrite to Node" stopProcessing="true">
          <match url=".*" />
          <action type="Rewrite" url=".next/standalone/server.js" />
        </rule>
      </rules>
    </rewrite>

    <!-- Optional: increase limits for Next.js payloads -->
    <security>
      <requestFiltering>
        <requestLimits maxAllowedContentLength="2147483647" />
      </requestFiltering>
    </security>

    <!-- Logging to iisnode logs folder (if configured by host) -->
    <iisnode nodeProcessCommandLine="%programfiles%\nodejs\node.exe" loggingEnabled="true" />
  </system.webServer>
</configuration>
